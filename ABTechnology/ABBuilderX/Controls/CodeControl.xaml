<local:XView x:Class="Controls.CodeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c="clr-namespace:Albert.Win32.Controls;assembly=Albert.Win32"
			 xmlns:local="clr-namespace:Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<!-- ToolBars-->
		<ToolBarTray>
			<ToolBar  >
				<ComboBox x:Name="fontComboBox" ItemTemplate="{StaticResource basicList}" ItemsSource="{Binding CodeFontPrests}" />
				<Slider x:Name="fotnSizeSlider" Value="18" Minimum="15" Maximum="150" />
			</ToolBar>
		</ToolBarTray>
		<!-- TextEditor-->
		<local:XTextEditor x:Name="codeText" ShowLineNumbers="True" Grid.Row="1" />




	</Grid>
	
	
</local:XView>
