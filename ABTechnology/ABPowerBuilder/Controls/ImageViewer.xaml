<local:PowerView x:Class="Controls.ImageViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Controls"
             xmlns:c="clr-namespace:Albert.Win32.Controls;assembly=Albert.Win32"
			 mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<StackPanel Orientation="Horizontal" Height="60" >
			<Rectangle Height="30" Width="30" Margin="5" >
				<Rectangle.Fill>
					<SolidColorBrush Color="{Binding ElementName=img,Path=SelectedColor}" />
				</Rectangle.Fill>
			</Rectangle>
			<TextBlock x:Name="tbColor" VerticalAlignment="Center" Text="{Binding ElementName=img, Path=SelectedColor}" />
			<c:PushButton Content="Add" />
		</StackPanel>

		<c:ZoomBox Grid.Row="1" >
			<Grid>
				<c:ImageColorCanvas x:Name="img" />
			</Grid>
			
		</c:ZoomBox>

	</Grid>
</local:PowerView>
